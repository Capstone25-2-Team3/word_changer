{
  "manifest_version": 3,
  "name": "댓글 텍스트 변환기",
  "version": "1.0",
  "description": "사이트별로 댓글 및 기타 텍스트 콘텐츠를 탐색하고 변환하는 Chrome 확장 프로그램입니다.",
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.dcinside.com/*",
        "<all_urls>"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ]
}
